{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "lib",
        "target": "es2022",
        "module": "esnext",
        "declaration": true,
        "declarationMap": true,
        "composite": true,
        "incremental": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "moduleResolution": "Bundler",
        "jsx": "react-jsx",
        "jsxImportSource": "@satorijs/element"
    },
    "include": [
        "src"
    ]
}
